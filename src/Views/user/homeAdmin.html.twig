{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="kaamelott-banner jumbotron kaamelott-underline">
            <h1>Compass</h1>
            <p>WildCodeSchool database</p>
        </div>

        <div class="row">
            <!-- Le bloc ci dessous permet d'afficher les card avec chaque citation, ce dernier devra se répéter pour toutes les citations -->

            {% for citation in alls %}

                <div class="col-xs-6 col-md-4">
                    <div class="thumbnail">
                        <div class="img-box">

                            <!-- Ici devra s'afficher l'image -->
                            <img class="kaamelott-underline" src="{{ citation.image }}" width="100%" height="200px" alt="{{ citation.author }}">
                            <!-- End -->

                        </div>
                        <div class="quote">
                            <blockquote>

                                <!-- Ici devra s'afficher le contenu de la citation -->
                                {{ citation.content }}
                                <!-- End -->

                            </blockquote>
                            <p class="source">

                                <!-- Ici devra s'afficher l'auteur de la citation -->
                                {{ citation.chapter }}
                                <!-- End -->

                                <!-- Ici devra s'afficher le chapitre de la citation -->
                                <i>{{ citation.author }}</i>
                                <!-- End -->

                            </p>
                            <!--  <span class="hider"></span> -->
                        </div>
                        {#<p class="item-actions">#}

                            {#<!-- Lien vers la page d'édition, ce dernier doit avoir une indication dans l'url permettant d'identifier quelle citation éditer -->#}
                            {#<a class="btn btn-warning" href="index.php?section=edit&id={{ citation.id}}"><i class="glyphicon glyphicon-pencil"></i></a>#}

                            {#<a class="btn btn-danger" href="index.php?section=delete&id={{ citation.id}}"><i class="glyphicon glyphicon-trash"></i></a>#}

                            {#<a class="btn btn-default" href="index.php?section=more&id={{ citation.id}}"><i class="glyphicon glyphicon-search"></i></a>#}

                        {#</p>#}
                    </div>
                </div>
            {% endfor %}
            <!-- End block card citation -->
        </div>

    </div>

{% endblock body %}